<div id="<%= dom_id book %>">
  <p>
    <strong><%= t('book.title', scope: [:activerecord, :attributes]) %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t('book.memo', scope: [:activerecord, :attributes]) %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t('book.author', scope: [:activerecord, :attributes]) %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t('book.picture', scope: [:activerecord, :attributes]) %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
